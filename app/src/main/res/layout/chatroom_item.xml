<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="64dp">

    <ImageView
        android:id="@+id/ivChatRoomItemPhoto"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_margin="@dimen/margin_medium" />

    <TextView
        android:id="@+id/tvChatRoomItemTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/ivChatRoomItemPhoto"
        android:layout_margin="@dimen/margin_medium"
        tools:text="TITLE" />

    <TextView
        android:id="@+id/tvChatRoomItemLastMessageDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="@dimen/margin_medium"
        tools:text="DATE" />

    <TextView
        android:id="@+id/tvChatRoomItemLastMessageText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvChatRoomItemTitle"
        android:layout_alignStart="@id/tvChatRoomItemTitle"
        tools:text="LAST MESSAGE" />
</RelativeLayout>