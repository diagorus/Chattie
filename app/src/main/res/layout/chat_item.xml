<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvChatItemUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="John Doe" />

    <android.support.v7.widget.CardView
        android:id="@+id/cvChatItemTextHolder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:layout_below="@id/tvChatItemUser">
        <TextView
            android:id="@+id/tvChatItemText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            tools:text="Message text" />
    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/tvChatItemDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cvChatItemTextHolder"
        android:layout_alignParentEnd="true"
        tools:text="HH:mm:ss" />
</RelativeLayout>