<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rlChatItemForm"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvChatItemUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/fontSize_small"
        tools:text="John Doe" />

    <TextView
        android:id="@+id/tvChatItemText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:layout_below="@id/tvChatItemUser"
        tools:text="Message text" />

    <TextView
        android:id="@+id/tvChatItemDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvChatItemText"
        android:layout_alignParentEnd="true"
        tools:text="11:44" />
</RelativeLayout>